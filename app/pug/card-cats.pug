extends blocks/_layout

append content
    main
        .breadcrumb-main.breadcrumb-dark
            nav(aria-label='breadcrumb')
                .container
                    ol(itemscope itemtype="http://schema.org/BreadcrumbList").breadcrumb.new.pl-0
                        li(itemprop="itemListElement" itemscope
                        itemtype="http://schema.org/ListItem").breadcrumb-item
                            a(href='#' itemprop="item")
                                span(itemprop="name") Главная
                                meta(itemprop="position" content="1")
                        li(itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem" aria-current='card-cats').breadcrumb-item.active
                            a(href='#' itemprop="item")
                                span(itemprop="name") Коты
                                meta(itemprop="position" content="1")


        .title-page
            .container
                .row
                    .col-12.mt-5
                        h1 Кот/Кличка
        .card-cats.mt-5
            .container
                .row.flex-wrap
                    .col-12.col-sm-12.col-md-12.col-xl-8
                        .card-cats-img
                            img(src='img/card-cats/cats.jpg')
                    .col
                        .card-cats-info.mt-3.mt-xl-0.mb-md-2
                            ul.align-self-start
                                li Порода:&nbsp;
                                    span SIA
                                li Окрас:&nbsp;
                                    span Дым
                                li Дата рождения:&nbsp;
                                    span 31.12.2018
                                li Заводчик:&nbsp;
                                    span Якимова Юлия
                                li Совладелец:&nbsp;
                                    span Якимов Алексей
                                li Статус:&nbsp;
                                    span Не учавствует в племенной работе
                                li  Переехал&nbsp;
                                    span в семью
                                li Титул:&nbsp;
                                    span Чемпиона мира&nbsp;
