extends blocks/_layout

append content
    main
        .breadcrumb-main.breadcrumb-dark
            nav(aria-label='breadcrumb')
                .container
                    ol.breadcrumb.new.pl-0
                        li.breadcrumb-item
                            a(href='#') Главная
                        li.breadcrumb-item.active(aria-current='card-cats') Коты


        .title-page
            .container
                .row
                    .col-12.mt-5
                        h1 Кот/Кличка
        .card-cats.mt-5
            .container
                .row.flex-wrap
                    .col-12.col-sm-12.col-md-12.col-xl-8
                        .card-cats-img
                            img(src='img/card-cats/cats.jpg')
                    .col
                        .card-cats-info.mt-3.mb-md-2
                            ul.align-self-start
                                li Порода:
                                    span SIA
                                li Окрас:
                                    span Дым
                                li Дата рождения:
                                    span 31.12.2018
                                li Заводчик:
                                    span Якимова Юлия
                                li Совладелец:
                                    span Якимов Алексей
                                li Статус:
                                    span Не учавствует в племенной работе
                                li  Переехал
                                    span в семью
                                li Титул:
                                    span Чемпиона мира
                                        a.award-link(href='#award') (еще 9)
                                li
                                    a.award-link(href='#') Родословная

        .cats-images.mt-3.mt-md-3.mt-xl-5
            .container
                .row
                    .col-12.col-sm-12.col-mf.col-lg-4.mt-3.mb-3
                        .cats-images-item
